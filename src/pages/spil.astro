---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-[#EEE3DC] justify-center w-full h-200">
    <!-- tekst fra venstre -->
    <div class="w-full h-full p-20">
      <h1 class="flex font-bold text-7xl text-left">
        Skal jeg steme?
      </h1>
      <p class="flex text-5xl text-left pt-3">
        Plastikforurening i naturen
      </p>

      <div class="flex justify-center pt-10">
    
      <div
        class="bg-[#23320348] w-full rounded-lg overflow-hidden p-5 inset-shadow-xl flex flex-col justify-between gap-6"
      >
    
        <!-- tekst og knapper -->
        <div class="text-left">
          <h2 class="text-xl p-4 sm:text-2xl font-bold lg:mb-25 mb-8 lg:pl-4">
            klik start her.
          </h2>

          <div
            class="flex justify-center p-5 space-x-9"
          >
            <a
              href="/spil"
              class="py-5 bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-7xl"
              >Stranden</a
            >
            <a
              href="/2spil"
              class="py-5 bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-7xl"
              >Vandet</a
            >
            
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>