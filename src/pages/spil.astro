---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-[#F4F3E8] justify-center flex w-full min-h-screen">
    <div class="w-full max-w-5xl p-5">
       <!-- tekst fra venstre -->
     
      <div class="flex rounded-lg justify-center pt-10">
    
      <div
        class="bg-[#FFFFFF] w-full flex-col rounded-lg"
      >
        <!-- tekst og knapper -->
        <div class="text-left">
           <h1 class="flex font-bold text-3xl sm:text-4xl p-5  pb-5 text-left">
        Interssere du dig for samfundet og politik?
      </h1>

          <div
            class="flex justify-center px-5 mb-5"
          >
            <a
              href="/spil2tid"
              class="py-5 bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-xl sm:text-2xl md:text-3xl"
              >Ja!</a
            >
            <a
              href="/spil2indflydelse"
              class="py-5 bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-xl sm:text-2xl md:text-3xl"
              >Nej</a
            >
        </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
</Layout>
