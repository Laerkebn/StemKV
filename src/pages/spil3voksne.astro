---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-[#F4F3E8] justify-center flex w-full min-h-screen">
    <div class="w-full max-w-5xl p-5">
       <!-- tekst fra venstre -->
     
      <div class="flex rounded-lg justify-center pt-10">
    
      <div
        class="bg-[#FFFFFF] p-5 w-full flex-col rounded-lg"
      >
        <!-- tekst og knapper -->
        <div class="text-left">
          <h2 class="text-6xl p-5 font-bold mb-7">
            Svar her:
          </h2>

          <div
            class="flex justify-center p-5 space-x-9"
          >
            <a
              href="/spilslut"
              class="bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-9xl"
              >Ja!</a
             >
            <a
              href="/spil2tid"
              class="bg-stone-50 rounded-lg shadow-xl p-5 font-bold hover:bg-[#F4F3E8] text-center text-9xl"
              >Nej</a
            >

          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>