---
const {
  bgColor = "bg-[#F4F3E8]",       // Main baggrund
  headerColor = "bg-white",       // Header baggrund
  footerColor = "bg-white",       // Footer baggrund
  headerLogo = "/Billeder/logo.svg", // Standard header-logo
  footerLogos = [
    { src: "/Billeder/regioner.svg", alt: "Regioner" },
    { src: "/Billeder/indenrigs.svg", alt: "Indenrigs" },
    { src: "/Billeder/kl.svg", alt: "KL" }
  ]
} = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>StemMed</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        max-width: 100%;
      }

      img {
        max-width: 100%;
        display: block;
      }
     </style>
  </head>
  <body class="flex flex-col min-h-screen">

    <!-- Top-logo -->
   <header class={`h-[150px] w-full flex items-center justify-center ${headerColor}`}>
  <a href="/">
    <img src={headerLogo} alt="Logo" class="h-24 object-contain" />
  </a>
</header>

   <!-- Main med dynamisk farve -->
    <main class={`flex-1 ${bgColor}`}>
      <slot />
    </main>

    <footer class={`w-full h-[150px] flex items-center justify-center ${footerColor}`}>
  <div class="flex space-x-40">
    {footerLogos.map((logo) => (
      <img src={logo.src} alt={logo.alt} class="h-12 object-contain" />
    ))}
  </div>
</footer>

  </body>
</html>